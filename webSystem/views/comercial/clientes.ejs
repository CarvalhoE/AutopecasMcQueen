<!doctype html>
<html lang="pt-BR">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Autopeças McQueen</title>
  <link rel="canonical" href="https://getbootstrap.com/docs/5.2/examples/sidebars/">
  <link rel="icon" href="../../public/image/logo.png" type="image/png" />
  <link rel="stylesheet" href="../../public/assets/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="../../public/assets/style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <link rel="stylesheet" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.css">
</head>

<body>
  <%- include('_lateral-bar.ejs') %>
  <main>
    <div class="header">
      <h1>Clientes</h1>
    </div>
    <div class="table-container">
      <div>
        <button class="aba-active">
          <i class="fa fa-users"></i>
          Clientes
        </button>
      </div>
      <div class="table-top">
        <div class="extras">
          <a href="/comercial/cadastraCliente"><button class="extra-n" id="btnNovoCliente">
              <i class="fa fa-plus-square"> Novo</i>
            </button></a>
        </div>
        <table class="table" id="example">
          <% if (values.length <= 0) { %>
          <tr>
            <td>Não há registros para serem mostrados!</td>
          </tr>
          <% } else {%>
          <thead>
            <tr>
              <th scope="col">Ações</th>
              <th scope="col">Cod</th>
              <th scope="col">Cliente</th>
              <th scope="col">Contato</th>
              <th scope="col">E-mail</th>
            </tr>
          </thead>
          <tbody>
            <% for (let i = 0; i < values.length; i++) { %>
            <tr>
              <td scope="row" style="display: flex;">
                <a href="/comercial/alteraCliente/<%= values[i].ID_Cliente %>" style="margin-right: 5px;">
                  <button type="submit" class="extra-d tags" name="ID_Cliente" value="<%= values[i].ID_Cliente %>"
                    gloss="Alterar Cliente">
                    <i class="fa fa-pencil-square-o"></i>
                  </button>
                </a>

                <form action="/comercial/clientes/<%= values[i].ID_Cliente %>" method="post">
                  <button type="submit" class="extra-d tags" name="ID_Cliente" style="margin-right: 5px;"
                    value="<%= values[i].ID_Cliente %>"
                    onclick="return confirm('Você tem certeza que deseja deletar este cliente ?')"
                    gloss="Remover Cliente">
                    <i class="fa fa-trash"></i>
                  </button>
                </form>
              </td>

              <td><%= values[i].ID_Cliente %></td>
              <td><%= values[i].NM_Nome %></td>
              <td class="phone"><%= values[i].NR_Telefone %></td>
              <td><%= values[i].DS_Email %></td>
            </tr>
            <% } %>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </main>
  <!-- Scripts -->
  <%- include('_scripts.ejs') %>
  <script>
    $(document).ready(function () {
      $('#example').DataTable({
        "language": {
          "lengthMenu": "Mostrar _MENU_ dados por página",
          "zeroRecords": "Nada Encontrado",
          "info": "Mostrando página _PAGE_ de _PAGES_",
          "search": "Procurar:",
          "infoFiltered": "(filtrado de _MAX_ registros totais)",
          "paginate": {
            "first": "Primeiro",
            "last": "Último",
            "next": "Próximo",
            "previous": "Anterior"
          },
          "loadingRecords": "Carregando...",
          "processing": "Processando...",
          "emptyTable": "Tabela Vazia"
        },
        lengthMenu: [5, 10, 20, 50, 100, 200, 500]
      });
    });
  </script>
</body>

</html>