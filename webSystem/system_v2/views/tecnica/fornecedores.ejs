<!doctype html>
<html lang="pt-BR">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Autopeças McQueen</title>
  <link rel="canonical" href="https://getbootstrap.com/docs/5.2/examples/sidebars/">
  <link rel="icon" href="../../public/image/logo.png" type="image/png" />
  <link rel="stylesheet" href="../../public/assets/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="../../public/assets/style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body>

  <%- include('_lateral-bar.ejs') %>

  <main>
    <div class="header">
      <h1>Fornecedores</h1>
    </div>
    <div class="table-container">
      <div>
        <button class="aba-active">
          <i class="fa fa-users"></i>
          Fornecedores
        </button>
      </div>

      <div class="table-top">
        <div class="extras">
          <a href="/tecnica/cadastraFornecedor"><button class="extra-n" id="btnNovoCliente">
              <i class="fa fa-plus-square"> Novo </i>
            </button></a>
          <input type="text" class="extra-s" placeholder="Pesquisa por Nome">
        </div>

        <table class="table">
          <% if (values.length <= 0) { %>
          <tr>
            <td>Não há registros para serem mostrados!</td>
          </tr>
          <% } else {%>
          <thead>
            <tr>
              <th scope="col">Ações</th>
              <th scope="col">Cod</th>
              <th scope="col">Fornecedor</th>
              <th scope="col">Contato</th>
              <th scope="col">E-mail</th>
            </tr>
          </thead>
          <tbody>
            <% for (let i = 0; i < values.length; i++) { %>
              <tr>
                <td scope="row" style="display: flex;">
                  <a href="/tecnica/alteraFornecedor/<%= values[i].ID_Fornecedor %>">
                    <button type="submit" class="extra-d tags" gloss="Alterar Fornecedor" value="<%= values[i].ID_Fornecedor %>" style="margin-right: 5px;">
                      <i class="fa fa-pencil-square-o"></i>
                    </button>
                  </a>
                  <form action="/tecnica/fornecedor/<%= values[i].ID_Fornecedor %>" method="post">
                    <button type="submit" class="extra-d tags" gloss="Remover Fornecedor" style="margin-right: 5px;" name="ID_Fornecedor" value="<%= values[i].ID_Fornecedor %>" onclick="return confirm('Você tem certeza que deseja remover este Fornecedor?')">
                      <i class="fa fa-trash"></i>
                    </button>
                  </form>
                  <button class="myBtn extra-d tags" value="<%= values[i].ID_Fornecedor %>" gloss="Detalhe do Fornecedor">
                    <i class="fa fa-file-text-o"></i>
                  </button>
                </td>
                <td><%= values[i].ID_Fornecedor %></td>
                <td><%= values[i].NM_Empresa %></td>
                <td class="phone"><%= values[i].NR_Telefone %></td>
                <td><%= values[i].DS_Email %></td>
              </tr>
              <% } %>
              <% } %>
          </tbody>
        </table>
      </div>
    </div>

  </main>

  <!-- Scripts -->
  <%- include('_scripts.ejs') %>
</body>

</html>