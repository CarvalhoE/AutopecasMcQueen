<!doctype html>
<html lang="pt-BR">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Autopeças McQueen</title>
  <link rel="canonical" href="https://getbootstrap.com/docs/5.2/examples/sidebars/">
  <link rel="icon" href="../../public/image/logo.png" type="image/png" />
  <link rel="stylesheet" href="../../public/assets/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="../../public/assets/style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body>

  <%- include('_lateral-bar.ejs') %>

  <main>
    <div class="header">
      <h1>Configurações - Perfil de Usuario</h1>
    </div>

    <div class="container">
      <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12 profile-box">
        <div class="row">
          <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="border-radius: 16px;">
            <div class="well profile col-lg-12 col-md-12 col-sm-12 col-xs-12">
              <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center">
                <figure>
                  <img src="https://www.w3schools.com/howto/img_avatar.png" alt="" class="img-circle"
                    style="width:50%; border-radius: 100px; margin-top: 10px;" id="user-img">
                </figure>
                <h5 style="text-align:center;"><strong id="user-name"><%= name %></strong></h5>
                <p style="text-align:center;font-size: smaller;" id="user-frid"><%= values.codigo %></p>
                <p style="text-align:center;font-size: smaller;overflow-wrap: break-word;" id="user-email">
                  <%= values.email %> </p>
                <p style="text-align:center;font-size: smaller;"><strong>
                    Status de conta:
                  </strong>
                  <span class="tags" id="user-status">
                    <%= values.habilitado  %>
                  </span>
                </p>
                <hr class="profile-divider">
                <p style="text-align:center;font-size: smaller;"><strong>Departamento/Cargo</strong></p>
                <p style="text-align:center;font-size: smaller;" id="user-role"><%= values.departamento %>/<%= values.cargo %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    </div>
  </main>

  <!-- Scripts -->
  <%- include('_scripts.ejs') %>
</body>

</html>