<!doctype html>
<html lang="pt-BR">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Autopeças McQueen</title>
    <link rel="canonical" href="https://getbootstrap.com/docs/5.2/examples/sidebars/">
    <link rel="icon" href="../public/image/logo.png" type="image/png" />
    <link rel="stylesheet" href="../public/assets/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="../public/assets/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body>
    <div class="containerLogin" style="background-color: #343a40;">
        <section class="vh-100">
            <div class="container py-5 h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col col-xl-10 box-login">
                        <div class="card" style="border-radius: 1rem;">
                            <div class="row g-0">
                                <div class="col-md-6 col-lg-5 d-none d-md-block">
                                    <img src="../public/image/bgLog.png" alt="login form" class="img-fluid"
                                        style="border-radius: 1rem 0 0 1rem;" />
                                </div>
                                <div class="col-md-6 col-lg-7 d-flex align-items-center ">
                                    <div class="card-body p-4 p-lg-5 text-black">

                                        <form action="/authentication" method="post">

                                            <div class="d-flex align-items-center mb-3 pb-1">
                                                <span class="h1 fw-bold mb-0">Autopeças McQueen</span>
                                            </div>

                                            <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Acesse o
                                                Sistema</h5>

                                            <div class="form-outline mb-4">
                                                <input type="text" id="form2Example17" name="user_login"
                                                    class="form-control form-control-lg" required />
                                                <label class="form-label" for="form2Example17">Login</label>
                                            </div>

                                            <div class="form-outline mb-4">
                                                <input type="password" id="form2Example27" name="user_password"
                                                    class="form-control form-control-lg" required />
                                                <label class="form-label" for="form2Example27">Senha</label>
                                            </div>
                                            
                                            <%- include('_alert.ejs') %>
                                            
                                            <div class="pt-1 mb-4">
                                                <button class="btn btn-dark btn-lg btn-block" type="submit">Login
                                                </button>
                                            </div>    
                                                                                  
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <!-- Scripts -->
    <%- include('_scripts.ejs') %>
</body>

</html>