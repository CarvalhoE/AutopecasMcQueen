<!doctype html>
<html lang="pt-BR">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Autopeças McQueen</title>
  <link rel="canonical" href="https://getbootstrap.com/docs/5.2/examples/sidebars/">
  <link rel="icon" href="../../public/image/logo.png" type="image/png" />
  <link rel="stylesheet" href="../../public/assets/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="../../public/assets/style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body>
  
  <%- include('_lateral-bar.ejs') %>
  
  <main>
    <div class="header">
      <h1>Compras</h1>
    </div>

    <div class="container">

      <div class="table-container">
        <div>
          <button class="aba-active" id="btnCompras">
            <i class="fa fa-credit-card-alt"></i>
            Compras
          </button>
        </div>

        <div class="table-top">
            <div class="extras">
              <a href="./comprasNovaCompra.html">
                <button class="extra-n">
                <i class="fa fa-plus-square"> Novo</i>
              </button>
            </a>
            <button class="extra-d">
              <i class="fa fa-pencil-square-o"></i>
            </button>
            <input type="text" class="extra-s" placeholder="Pesquisa por COD">
            <input type="month" id="month" class="extra-m">
          </div>

          <table class="table">
            <% if (values.length <= 0) { %>
              <tr>
                <td>Não há registros para serem mostrados!</td>
              </tr>
              <% } else {%>
                <thead>
                  <tr>
                    <td scope="row"><input type="checkbox"></td>
                    <th scope="col">Cod</th>
                    <th scope="col">Funcionario</th>
                    <th scope="col">Fornecedor</th>
                    <th scope="col">Data da Compra</th>
                    <th scope="col">Forma de Pagamento</th>
                    <th scope="col">Situação</th>
                    <th scope="col">Valor</th>
                  </tr>
                </thead>
                <tbody>
              <% for (let i = 0; i < values.length; i++) { %>
                <tr>
                  <td scope="row"><input type="checkbox"></td>
                  <td><a href="#"><%= valuesCompra[i].ID_Compra %></a></td>
                  <td><%= valuesFuncionario[i].NM_Nome %></td>
                  <td><%= valuesFornecedor[i].NM_Nome %></td>
                  <td><%= valuesCompra[i].DT_Compra %></td>
                  <td><%= valuesCompra[i].ID_FormaPagamento %></td>
                  <td><%= valuesCompra[i].ID_CompraSituacao %></td>
                  <td><%= valuesCompra[i].VL_ValorTotal %></td>
                </tr>
              <% } %>
              <% } %>
            <thead>
              <tr>
                <td scope="row"><input type="checkbox"></td>
                <th scope="col">Cod</th>
                <th scope="col">Funcionario</th>
                <th scope="col">Fornecedor</th>
                <th scope="col">Data da Compra</th>
                <th scope="col">Forma de Pagamento</th>
                <th scope="col">Situação</th>
                <th scope="col">Valor</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td scope="row"><input type="checkbox"></td>
                <td><a href="">Cod</a></td>
                <td>Otto</td>
                <td>@mdo</td>
                <td>Otto</td>
                <td>Antilope</td>
                <td>Otto</td>
                <td>@mdo</td>
              </tr>
              <tr>
                <td scope="row"><input type="checkbox"></td>
                <td><a href="">Cod</a></td>
                <td>Otto</td>
                <td>@mdo</td>
                <td>@mdo</td>
                <td>Otto</td>
                <td>Dinheiro</td>
                <td>@mdo</td>
              </tr>
              <tr>
                <td scope="row"><input type="checkbox"></td>
                <td><a href="">Cod</a></td>
                <td>Otto</td>
                <td>@mdo</td>
                <td>Otto</td>
                <td>@mdo</td>
                <td>Otto</td>
                <td>@mdo</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>

  </main>

  <!-- Scripts -->
  <script src="../../public/assets/dist/js/bootstrap.bundle.min.js"></script>
  <script src="../../public/js/index.js"></script>
</body>

</html>